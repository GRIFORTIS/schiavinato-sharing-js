{
  "name": "@grifortis/schiavinato-sharing",
  "version": "0.1.0",
  "description": "Human-executable secret sharing for BIP39 mnemonics using GF(2053) - Universal multi-chain custody for Bitcoin, Ethereum, and all BIP39-compatible wallets",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "build:browser": "tsup src/index.ts --format iife --global-name SchiavinatoSharing --minify --outDir dist/browser",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install || true",
    "prepublishOnly": "npm run typecheck && npm run test && npm run build",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "verify": "bash scripts/verify-checksums.sh",
    "verify:latest": "bash scripts/verify-checksums.sh latest"
  },
  "keywords": [
    "bip39",
    "shamir",
    "secret-sharing",
    "mnemonic",
    "cryptocurrency",
    "bitcoin",
    "ethereum",
    "multi-chain",
    "inheritance",
    "backup",
    "schiavinato",
    "gf2053",
    "threshold-cryptography",
    "wallet",
    "custody",
    "disaster-recovery"
  ],
  "author": "GRIFORTIS <info@grifortis.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GRIFORTIS/schiavinato-sharing-js.git"
  },
  "bugs": {
    "url": "https://github.com/GRIFORTIS/schiavinato-sharing-js/issues"
  },
  "homepage": "https://github.com/GRIFORTIS/schiavinato-sharing-js#readme",
  "dependencies": {
    "@noble/hashes": "^1.3.3",
    "@scure/bip39": "^1.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
